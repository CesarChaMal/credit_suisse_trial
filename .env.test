# Credit Suisse Trial - Test Environment Configuration

# Spring Profile
SPRING_PROFILES_ACTIVE=test

# Kafka Configuration (Embedded for testing)
KAFKA_BOOTSTRAP_SERVERS=localhost:9093
KAFKA_SERVER_IP=localhost

# Processing Configuration (Smaller batches for testing)
PROCESSING_BATCH_SIZE=100
MEMORY_THRESHOLD=0.9
PROCESSING_TIMEOUT=10000

# Database Configuration (In-memory for testing)
DB_URL=jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1
DB_USERNAME=sa
DB_PASSWORD=

# Application Configuration
SERVER_PORT=8081
CONTEXT_PATH=/

# File Generation Configuration (Smaller files for testing)
INPUT_FILE_PATH=src/test/resources/test_input.txt
MAX_FILE_SIZE=1000

# Performance Testing
ENABLE_KAFKA_PROCESSING=false
KAFKA_PROCESSING_ENABLED=false